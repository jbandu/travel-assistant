PINECONE_ENVIRONMENT=

# ElevenLabs - Text-to-speech for voice assistant
# Get key from: https://elevenlabs.io/
# Cost: $5/month for 30k characters
ELEVENLABS_API_KEY=

# Grok (xAI) - Real-time AI model (experimental)
# Apply for access: https://x.ai/
GROK_API_KEY=


# =============================================================================
# INFRASTRUCTURE
# =============================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379


# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_HOTEL_BOOKING=true
ENABLE_ACTIVITY_BOOKING=true
ENABLE_LOCATION_TRIGGERS=false
ENABLE_VOICE_ASSISTANT=false
ENABLE_SEMANTIC_SEARCH=false
ENABLE_AI_IMAGE_GENERATION=false


